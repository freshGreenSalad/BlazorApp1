@inject viewModel appState

<div class="p-1">
    <RadzenCard>
        <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">
            Enter your Radio Button Question
        </RadzenText>
        <RadzenTextArea Placeholder="Enter here..." />
        <hr>

        <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">
            Enter your RadioButton answers (users can only select one of these)
        </RadzenText>

        <div class="row">
            <div class="col-9 p-1">
                <RadzenTextArea @bind-Value=appState.questionBeingAdded Placeholder="Enter here..." />
            </div>
            <div class="col-3 p-1">
                <RadzenButton Click=@(args => appState.addQuestion(@appState.questionBeingAdded?? "no val"))>
                    Add
                </RadzenButton>
            </div>
        </div>

        @foreach (string quesiton in appState.questionList)
        {
            <RadioOption onclick=@(args => appState.removeQuestionFromList(quesiton)) Answer=@quesiton />
        }

    </RadzenCard>
</div>

